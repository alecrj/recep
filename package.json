{
  "name": "ai-receptionist-system",
  "version": "1.0.0",
  "private": true,
  "description": "Complete AI Receptionist System - Multi-tenant SaaS",
  "packageManager": "npm@9.8.1",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "db:migrate": "cd packages/database && npm run migrate",
    "db:studio": "cd packages/database && npm run studio",
    "setup": "node scripts/setup.js"
  },
  "devDependencies": {
    "eslint": "^8.50.0",
    "prettier": "^3.0.0",
    "turbo": "^2.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "@ffmpeg-installer/ffmpeg": "^1.1.0",
    "@types/fluent-ffmpeg": "^2.1.27",
    "fluent-ffmpeg": "^2.1.3",
    "nodemailer": "^7.0.9"
  }
}
